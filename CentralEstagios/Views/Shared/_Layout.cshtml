<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/Masks.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>*@

                    @{ if (Session["usuario"] != null)
                       {
                        <li>@Html.ActionLink("Cursos", "Index", "Curso")</li>
                        <li>@Html.ActionLink("Conhecimentos", "Index", "Conhecimento")</li>
                        <li>@Html.ActionLink("Vagas", "Index", "Vaga")</li>
                        <li>@Html.ActionLink("Usuários", "List", "Login")</li>
                        <li><b>@Html.ActionLink("Logout", "Logout", "Login")</b></li>
                       }
                       else if (Session["usuario"] == null)
                       {
                        <li>@Html.ActionLink("Login", "Index", "Login")</li>
                       } }
                </ul>
            </nav>
            <div class="float-left">
                <img src="~/Resources/site_logo.png" />
                <br />
                <br />
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Central de Estágios</p>
                <p>Sistema desenvolvido por Grupo EhAki!</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
