@model CentralEstagios.Models.Login

@{
    ViewBag.Title = "Novo Usuário";
}

<h2>Novo Usuário</h2>

<br />

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Login</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Rm)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Rm)
            @Html.ValidationMessageFor(model => model.Rm)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Senha)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Senha)
            @Html.ValidationMessageFor(model => model.Senha)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmaSenha)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConfirmaSenha)
            @Html.ValidationMessageFor(model => model.ConfirmaSenha)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.StatusAdm)
        </div>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.StatusAdm)
            @Html.ValidationMessageFor(model => model.StatusAdm)
        </div>

        @Html.HiddenFor(model => model.Status)

        <p>
            <input type="submit" value="Criar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
