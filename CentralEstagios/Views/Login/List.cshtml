@model IEnumerable<CentralEstagios.Models.Login>

@{
    ViewBag.Title = "Lista de Usuários";
}

<h2>Usuários</h2>

<p>
    @Html.ActionLink("Novo Usuário", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Senha)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { rm=item.Rm }) |
            @Html.ActionLink("Detalhes", "Details", new { rm=item.Rm }) |
            @Html.ActionLink("Excluir", "Delete", new { rm=item.Rm })
        </td>
    </tr>
}

</table>
