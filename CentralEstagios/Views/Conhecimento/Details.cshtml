@model CentralEstagios.Models.ConhecimentoCurso

@{
    ViewBag.Title = @Html.ValueFor(model => model.Conhecimento.Descricao);
}

<h2>@Html.ValueFor(model => model.Conhecimento.Descricao)</h2>

<br />

<fieldset>
    <legend>Conhecimento</legend>

    <div class="display-label">
        <b>@Html.DisplayNameFor(model => model.Conhecimento.Descricao)</b>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Conhecimento.Descricao)
    </div>

    <br />

    <div class="display-label">
        <b>Cursos que contém este conhecimento</b>
    </div>

    @for (int i = 0; i < Model.Cursos.Count(); i++)
    {
        <div class="editor-label">
            @Html.ValueFor(item => item.Cursos[i].Descricao)
        </div>
    }

</fieldset>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
